# Production Environment Variables for CUDA Learning
# Generated by Ansible deployment

# User and Group IDs
USER_ID={{ ansible_user_uid }}
GROUP_ID={{ ansible_user_gid }}

# Application Configuration
ENVIRONMENT=production
APP_NAME=cuda-learning
APP_DIRECTORY=/opt/cuda-learning

# Docker Configuration
DOCKER_COMPOSE_FILE={{ docker_compose_file }}
DOCKER_PROFILE={{ production_profile }}

# Repository Configuration
REPO_URL={{ repo_url }}
REPO_BRANCH={{ repo_branch }}

# Security
TLS_ENABLED=true
TLS_CERT_PATH=/opt/cuda-learning/.secrets/localhost+2.pem
TLS_KEY_PATH=/opt/cuda-learning/.secrets/localhost+2-key.pem

# Resource Limits for Jetson Nano
MEMORY_LIMIT=6g
CPU_LIMIT=4

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
FLIPT_ENABLED=true
FLIPT_URL=http://flipt:8080

# Observability
JAEGER_ENABLED=true
GRAFANA_ENABLED=true
LOKI_ENABLED=true
